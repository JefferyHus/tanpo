{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDirs": ["./src", "./test"],
    "strict": false,
    "strictPropertyInitialization": false,
    "sourceMap": false,
    "removeComments": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["jest", "node"],
    "strictNullChecks": true
  },
  "exclude": ["node_modules"],
}