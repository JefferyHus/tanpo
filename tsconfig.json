{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ESNext"
    ],
    "types": [
      "reflect-metadata",
      "jest"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "resolveJsonModule": true,
  },
  "exclude": [
    "dist",
    "node_modules",
    "sample",
    "test/**"
  ],
  "include": [
    "src/**/*",
    "src/**/**/*.json"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}